@model NovusConceptum.Models.ForumViewModels.PostViewModel

@{
    ViewData["Title"] = "EditPost";
    string link = "/Details/" + Model.SujetID;

}

<h2>Message</h2>

<form asp-action="EditPost">
    <div class="form-horizontal">
        <h4>Modifier un message</h4>
        <input asp-for="ID" class="form-control" type="hidden" />
        <input asp-for="Auteur" class="form-control" type="hidden" />
        <input asp-for="Date" class="form-control" type="hidden" />
        <input asp-for="SujetID" class="form-control" type="hidden" />
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Message" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="@link">Retour au sujet</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
