@model NovusConceptum.Models.MembresViewModels.MembresViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>MembresViewModel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ID" class="form-control" type="hidden" />
        <div class="form-group">
            <label asp-for="Roles" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @foreach (var role in Model.Roles)
                {
                    if (Model.User.Roles.Any(r => r.RoleId == role.Id))
                    {
                        <input type="checkbox" name="selectedRoles" value="@role" checked="checked" /> @role <br>
                    }
                    else
                    {
                        <input type="checkbox" name="selectedRoles" value="@role" /> @role <br>
                    }
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
