@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@section scripts {
    <environment names="Development">
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    </environment>
}


@{
    ViewData["Title"] = Localizer["HomePage"];
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="text-align:center"><img src="~/images/logo.png" height="256px" width="256px"/></div>
    <div class="col-md-3"></div>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/BannerArma.png" alt="Arma3" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @Localizer["Arma3Text"]
                    <a class="btn btn-default" href="/* */">
                        @Localizer["KnowMore"]
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/BannerArk.png" alt="Ark " class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @Localizer["ArkText"]
                    <a class="btn btn-default" href="">
                        @Localizer["KnowMore"]
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/BannerMinecraft.png" alt="Minecraft" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @Localizer["MinecraftText"]
                    <a class="btn btn-default" href="">
                        @Localizer["KnowMore"]
                    </a>
                </p>
            </div>
        </div>
        @*<div class="item">
            <img src="~/images/BannerTeams.png" alt="Teamspeak" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @Localizer["TeamSpeakText"]
                    <a class="btn btn-default" href="">
                        @Localizer["KnowMore"]
                    </a>
                </p>
            </div>
        </div>*@
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <hr>
</div>
<div class="col-md-12">
    
    @Html.Partial("_DiscordPartial.cshtml")
</div>


