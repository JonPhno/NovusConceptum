@model NovusConceptum.Models.ForumViewModels.ForumViewModel

@{
    ViewData["Title"] = "Modifier";
}

<h2>Sujet</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Modifier un sujet</h4>
        <input asp-for="ID" class="form-control" type="hidden" />
        <input asp-for="Auteur" class="form-control" type="hidden" />
        <input asp-for="DateCréation" class="form-control" type="hidden" />
        <input asp-for="DateModifier" class="form-control" type="hidden" />
        <input asp-for="NombreMessages" class="form-control" type="hidden" />
        <input asp-for="Dernier" class="form-control" type="hidden" />

        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Titre" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
