@model NovusConceptum.Models.SondageViewModel.SondageViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Edit"];
    string o = "";
    foreach (string opt in Model.Options)
    {
        o += opt;
    }
}

<h2>@ViewData["Edit"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <input asp-for="ID" class="form-control" type="hidden" />
        <input asp-for="Options" class="form-control" type="hidden" />
        <input asp-for="Date" class="form-control" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nom" class="col-md-2 control-label">@SharedLocalizer["Name"]</label>
            <div class="col-md-10">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label">@SharedLocalizer["Description"]</label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateFin" class="col-md-2 control-label">@SharedLocalizer["DateEnd"]</label>
            <div class="col-md-10">
                <input asp-for="DateFin" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OptionsString" class="col-md-2 control-label"></label>
            <div class="col-md-10" data-content="o">
                <input asp-for="OptionsString" class="form-control" />
                <span asp-validation-for="OptionsString" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">@SharedLocalizer["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
